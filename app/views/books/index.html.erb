<h1>Books</h1>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <body>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <th><%= link_to 'show', book_path(book.id) %></th>
      <th><%= link_to 'edit', edit_book_path(book.id) %></th>
      <th><%= link_to 'destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
    </tr>
    <% end %>
  </body>

</table>

<h4>New Book</h4>
  <%= form_with model:@book, url: books_path, method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
  <% end %>